        //Me han pedido que haga un programa que coge 10 numeros sin decimales por teclado, despues los muestra de menor a mayor por pntalla
        // y que diga cuantos pares hay que son los que se dividen por 2 y da 0, tambi√©n tengo que poner cuantos impares que es lo de antes pero
        //al veres
        //declaracion de bariables
        int pares = 0;
        int impares = 0;
        int[] numeros = new int[10];

        Scanner sn1 = new Scanner(System.in);

        
        for (int i = 0; i < 10; i++) {

            System.out.println("Dame un numero" + (i + 1) + " : ");
            numeros[i] = sn1.nextInt();
            
        }
        // los numeros no puedo ordenarlos todavia
        for (int i = 0; i < 10; i++) {
            if (numeros[i] % 2 == 0) {
                pares++;

            } else {

                impares++;

            }

            System.out.println("Total pares: " + pares);
            System.out.println("Total impares: " + impares);

        }
    }

}
